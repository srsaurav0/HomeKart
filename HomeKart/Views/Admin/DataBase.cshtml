@model IEnumerable<RegisterVM>

<style>
    .hp1 {
        margin-top: 35px;
        margin-left: 35px;
        margin-right: 35px;
        height: 70px;
        background-color: #3B3B3B;
    }

    .cent {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .font {
        font-family: 'Playfair Display', serif;
    }

    a {
        text-decoration: none;
    }
</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" style="font-family: 'Rubik Moonrocks', cursive; font-size:40px" asp-area="" asp-controller="Home" asp-action="Index">HomeKart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link font" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
            </div>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item text-white font mt-1" style="margin-right:1vw; font-size:larger">
                    Welcome Admin!
                </li>
                <li class="nav-item">
                    <a class="nav-link btn font btn-outline-light" style="margin-right:1vw" asp-controller="Home" asp-action="Index">
                        Sign Out
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="container font">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Admin Logs:</h2>
        </div>
    </div>


    <table class="table table-bordered table-striped mt-3" style="width:100%;">
        <thead class="" style="background-color:darkgray">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Creation Time</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Email</td>
                    <td>@obj.Password</td>
                    <td>@obj.DateTimeCreater</td>
                    <td class="text-center">
                        <a asp-action="UpdateProperty" asp-controller="Owner" asp-route-id="@obj.Id">
                            <div class="btn btn-group mx-1 btn-secondary">
                                <i class="bi bi-pencil"></i> Update
                            </div>
                        </a>
                    </td>
                    <td class="text-center">
                        <a asp-action="DeleteProperty" asp-controller="Owner" asp-route-id="@obj.Id">
                            <div class="btn btn-group mx-1 btn-danger">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>