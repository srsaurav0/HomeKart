@model RegisterVM

<style>
    .hovw a:hover {
            color: black !important;
        }
    a {
        text-decoration: none;
    }
</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" style="font-size:20px; color:#bfbfbf !important;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
            </div>
            <div class="text-center col-6" style="margin-right:7vw">
                <a class="navbar-brand text-center" style="font-family: 'Source Serif Pro', serif; font-size:40px" asp-area="" asp-controller="Home" asp-action="Index">HomeKart</a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a asp-controller="Admin" asp-action="DataBase" class="nav-link" style="margin-right:1vw; font-size:18px;">
                        Welcome! Admin
                    </a>
                </li>
                <li class="nav-item hovw">
                    <a class="nav-link btn btn-outline-light" asp-controller="Admin" asp-action="SignOutAdmin">
                        Sign out
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="container col-12 mt-5 d-flex font mb-3" style="margin-top:15vh !important; margin-bottom:65vh !important;">
    <div class="col-6 ">
        <div class="col-10 p-5" style="border-radius:25px; background-color:#F4F4F4">
            <form method="post" asp-action="DeleteUsr">
                <div class="">
                    <h2>Delete User:</h2>
                </div>
                <input asp-for="Id" hidden />
                <div class="form-group mt-3">
                    <label asp-for="Id" class="m-2"></label>
                    <input asp-for="Id" disabled class="form-control">
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Name" class="m-2"></label>
                    <input asp-for="Name" disabled class="form-control">
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Email" class="m-2"></label>
                    <input asp-for="Email" disabled class="form-control">
                </div>
                <div class="form-group mt-3">
                    <label asp-for="DateTimeCreater" class="m-2"></label>
                    <input asp-for="DateTimeCreater" disabled class="form-control">
                </div>

                <div class="form-group mt-5 text-center">
                    <button type="submit" class="btn btn-danger col-5">Delete</button>
                </div>
                
            </form>
        </div>
    </div>
    <div class="col-6">
        <img style="width:45vw; margin-top:15vh" src="~/Images/Delete user.webp" />
    </div>
</div>


