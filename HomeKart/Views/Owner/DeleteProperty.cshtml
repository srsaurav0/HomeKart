@model OwnerVM

<style>
    .font {
        font-family: 'Playfair Display', serif;
    }
</style>

<div class="container col-12 mt-5 d-flex font mb-3">
    <div class="col-6 ">
        <div class="col-10 bg-light p-5" style="border-radius:25px;">
            <form method="post" asp-action="Delete">
                <div class="">
                    <h2>Delete Property:</h2>
                </div>
                <input asp-for="Id" hidden />
                <div class="form-group mt-3">
                    <label asp-for="Address" class="m-2"></label>
                    <input asp-for="Address" disabled class="form-control">
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Area" class="m-2"></label>
                    <input asp-for="Area" disabled class="form-control">
                </div>
                <div class="form-group mt-3">
                    <label asp-for="No_of_Rooms" class="m-2">Number of Rooms</label>
                    <input asp-for="No_of_Rooms" disabled class="form-control">
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Floor_No" class="m-2">Floor no</label>
                    <input asp-for="Floor_No" disabled class="form-control">
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Rent_Amount" class="m-2">Rent amount</label>
                    <input asp-for="Rent_Amount" disabled class="form-control">
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Phone" class="m-2">Phone</label>
                    <input asp-for="Phone" disabled class="form-control">
                </div>
                

                <div class="form-group mt-5 text-center">
                    <button type="submit" class="btn btn-danger col-5">Delete</button>
                </div>
                
            </form>
        </div>
    </div>
    <div class="col-6">
        <img style="width:45vw; margin-top:15vh" src="~/Images/Image 3.jpg" />
    </div>
</div>


