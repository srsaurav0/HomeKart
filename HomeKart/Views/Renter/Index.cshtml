@model FilterVM

<style>
    a {
        text-decoration: none;
    }

    .hovw a:hover {
        color: black !important;
    }
</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" style="font-size:20px; color:#bfbfbf !important;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
            </div>
            <div class="text-center col-6" style="margin-right:7vw">
                <a class="navbar-brand text-center" style="font-family: 'Source Serif Pro', serif; font-size:40px" asp-area="" asp-controller="Home" asp-action="Index">HomeKart</a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" style="margin-right:1vw; font-size:18px;" asp-controller="Role" asp-action="Index">
                        Welcome! @ViewBag.Name
                    </a>
                </li>
                <li class="nav-item hovw">
                    <a class="nav-link btn btn-outline-light" asp-controller="SignIn" asp-action="SignOut">
                        Sign out
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="container" style="margin-top:10vh !important; margin-bottom:65vh">
    <div class="row pt-4">
        <div class="col-3">
            <h2 class="text-dark">Property List:</h2>
        </div>
        <div class="col-9">
            <form method="post" class="d-flex align-items-center" style="flex-direction:row-reverse" asp-action="Filter" asp-controller="Renter">
                <button type="submit" class="btn btn-primary" style="margin-left:3vw">Filter</button>

                <div class="form-group">
                    <input  asp-for="City" class="form-control" id="cityId">
                </div>
                <div class="form-group" style="margin-left:2vw">
                    <label asp-for="City">Enter city name:</label>
                </div>
                <div class="form-group">
                    <input  asp-for="Lower" class="form-control" id="lowerId">
                </div>
                <div class="form-group" style="margin-left:2vw">
                    <label asp-for="Lower">Enter lower rent limit:</label>
                </div>
                <div class="form-group">
                    <input asp-for="Upper" class="form-control" id="upperId">
                </div>
                <div class="form-group">
                    <label asp-for="Upper">Enter upper rent limit:</label>
                </div>
            </form>
        </div>
    </div>


    <table class="table table-bordered table-striped mt-3" style="width:100%;">
        <thead class="" style="background-color:darkgray">
            <tr>
                <th class="w-25">Address</th>
                <th>Area</th>
                <th style="width:15vw">No. of Rooms</th>
                <th>Floor No.</th>
                <th>Rent Amount</th>
                <th>Phone No.</th>
                <th class="text-center">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.PropertyTab)
            {
                <tr>
                    <td>@obj.Address</td>
                    <td>@obj.Area</td>
                    <td style="width:15vw">@obj.No_of_Rooms</td>
                    <td>@obj.Floor_No</td>
                    <td>@obj.Rent_Amount</td>
                    <td>@obj.Phone</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-controller="Renter" asp-route-id="@obj.Id">
                            <div class="btn btn-group mx-1 btn-secondary">
                                <i class="bi bi-pencil"></i> Details
                            </div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>